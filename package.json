{
  "name": "innodoc",
  "version": "0.2.3",
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:icon-bundle && pnpm run build:client && pnpm run build:server",
    "build:clean": "rimraf dist",
    "build:client": "pnpm run --filter @innodoc/app build",
    "build:icon-bundle": "pnpm run --filter @innodoc/commands build-icon-bundle",
    "dev": "nodemon --ext ts --watch packages/server --exec pnpm -- run server:dev",
    "dev:mock": "INNODOC_API_MOCK=true INNODOC_DEFAULT_COURSE_SLUG=testcourse INNODOC_COURSE_SLUG_MODE=DISABLED nodemon --ext ts --watch ./src/server --exec ts-node ./src/server/startMockServer.ts",
    "knex": "ts-node node_modules/knex/bin/cli.js",
    "import-v1": "pnpm run --filter @innodoc/commands import",
    "lint:eslint": "pnpm run --parallel --filter @innodoc/* --filter @types/innodoc-global-types lint:eslint",
    "lint:type-check": "pnpm run --parallel --filter @innodoc/* --filter @types/innodoc-global-types lint:type-check",
    "lint": "pnpm run lint:eslint && pnpm run type-check",
    "prepush": "pnpm run lint && pnpm run test",
    "prod": "pnpm run build && pnpm run server:prod",
    "routes": "pnpm run --filter @innodoc/commands routes",
    "server:prod": "NODE_ENV=production pnpm node dist/startServer.js",
    "server:dev": "pnpm run --filter @innodoc/server dev",
    "test:e2e": "playwright test",
    "test:integration": "VITEST_MODE=integration pnpm run test:vitest",
    "test:unit": "VITEST_MODE=unit pnpm run test:vitest",
    "test:vitest": "vitest run",
    "test": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "visualize-bundle": "VISUALIZE_BUNDLE=true pnpm run build"
  },
  "dependencies": {
    "typescript": "~5.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@faker-js/faker": "^8.0.2",
    "@innodoc/eslint-config": "workspace:^",
    "@innodoc/ts-config": "workspace:^",
    "@playwright/test": "^1.36.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.2",
    "@types/testing-library__jest-dom": "^5.14.8",
    "cross-fetch": "^4.0.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-jest-dom": "^5.0.1",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-testing-library": "^5.11.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mdast-builder": "^1.1.1",
    "msw": "^1.2.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "vitest": "^0.33.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "private": true,
  "type": "module",
  "pnpm": {
    "overrides": {
      "@emotion/react": "^11.11.1",
      "@reduxjs/toolkit": "^1.9.5",
      "@types/mdast": "^4.0.0",
      "@types/unist": "^3.0.0",
      "typescript": "~5.0.4",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-redux": "^8.0.7",
      "redux": "^4.2.1"
    },
    "patchedDependencies": {
      "hast-util-from-html-isomorphic@1.0.0": "patches/hast-util-from-html-isomorphic@1.0.0.patch",
      "decode-named-character-reference@1.0.2": "patches/decode-named-character-reference@1.0.2.patch"
    }
  },
  "msw": {
    "workerDirectory": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
