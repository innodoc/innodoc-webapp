{
  "name": "innodoc-webapp",
  "version": "0.0.1",
  "author": "innoCampus, TU Berlin",
  "contributors": [
    "Mirko Dietrich <dietrich@math.tu-berlin.de>"
  ],
  "description": "innoDoc web app",
  "main": "index.js",
  "repository": "https://gitlab.tu-berlin.de/innodoc/innodoc-webapp",
  "files": [
    "LICENSE.txt",
    "README.md"
