  "scripts": {
    "build": "next build",
    "dev": "babel-node scripts/server.js",
    "lint": "eslint ./",
    "start": "NODE_ENV=production babel-node scripts/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "innodoc",
    "react",
    "elearning"
  ],
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@zeit/next-sass": "^0.2.0",
    "classnames": "^2.2.6",
    "dotenv": "^6.0.0",
    "dotenv-webpack": "^1.5.7",
    "es6-promise": "^4.2.4",
    "express": "^4.16.3",
    "i18next": "^11.3.6",
    "i18next-browser-languagedetector": "^2.2.1",
    "i18next-express-middleware": "^1.2.0",
    "i18next-node-fs-backend": "^1.2.1",
    "i18next-xhr-backend": "^1.5.1",
    "isomorphic-unfetch": "^2.0.0",
    "load-script": "^1.0.0",
    "mathjs": "^5.0.3",
    "md5": "^2.2.1",
    "next": "^6.1.1",
    "next-redux-saga": "^3.0.0-beta.1",
    "next-redux-wrapper": "^2.0.0",
    "node-sass": "^4.9.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-i18next": "^7.8.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
    "semantic-ui-react": "^0.82.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-preset-env": "^1.7.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.4.1",
    "jest-environment-enzyme": "^6.0.2",
    "jest-enzyme": "^6.0.2",
    "redux-devtools-extension": "^2.13.5"
  },
  "jest": {
    "roots": [
      "components",
      "lib",
      "pages",
      "sagas",
      "store"
    ],
    "setupTestFrameworkScriptFile": "jest-enzyme",
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "collectCoverageFrom": [
      "components/**/*.js",
      "lib/**/*.js",
      "pages/**/*.js",
      "sagas/**/*.js",
      "store/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ]
  }
}
