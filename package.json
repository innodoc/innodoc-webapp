{
  "name": "innodoc",
  "version": "0.2.3",
  "private": true,
  "scripts": {
    "build:analyze": "yarn workspace @innodoc/app build:analyze",
    "build": "yarn workspace @innodoc/app build",
    "dev": "yarn workspace @innodoc/app dev",
    "format": "prettier --write \"*.js\" \"app/**/*.js\" \"packages/**/*.js\"",
    "lint:eslint": "eslint .",
    "lint:stylelint": "yarn workspace @innodoc/app lint:stylelint",
    "lint": "yarn lint:eslint && yarn lint:stylelint",
    "prepush": "yarn build && yarn lint && yarn test:unit && yarn test:e2e",
    "start": "yarn workspace @innodoc/app start",
    "test:e2e:content": "http-server e2e/content -a localhost -p ${CONTENT_PORT:-8001} --cors",
    "test:e2e:show": "PLAYWRIGHT_HEADLESS=false yarn test:e2e",
    "test:e2e": "JEST_PLAYWRIGHT_CONFIG=e2e/jest/jest-playwright.config.js APP_ROOT=${APP_ROOT:-http://localhost:6123/} CONTENT_ROOT=${CONTENT_ROOT:-http://localhost:6124/} MONGO_URL=${MONGO_URL:-mongodb://localhost:6125/innodoc-e2e} jest --runInBand --forceExit --detectOpenHandles --config e2e/jest/jest.config.js",
    "test:integration": "yarn workspace @innodoc/app test:integration",
    "test:unit:coverage": "yarn run test:unit --coverage",
    "test:unit": "jest"
  },
  "workspaces": [
    "app",
    "packages/*"
  ],
  "dependencies": {
    "next": "^12.2.2",
    "pm2": "^4.5.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@innodoc/eslint-config": "workspace:^",
    "eslint": "^8.20.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.0",
    "stylelint": "^14.9.1"
  },
  "packageManager": "yarn@4.0.0-rc.13",
  "dependenciesMeta": {
    "eslint-import-resolver-alias@1.1.2": {
      "unplugged": true
    },
    "eslint-import-resolver-custom-alias@1.3.0": {
      "unplugged": true
    }
  }
}
