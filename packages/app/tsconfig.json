{
  "extends": "@innodoc/ts-config/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ESNext",
    "types": ["vite/client", "vitest/globals"],
    "useDefineForClassFields": true
  },
  "include": ["eslint.config.js", "vite.config.ts", "src"],
  "exclude": ["public"]
}
