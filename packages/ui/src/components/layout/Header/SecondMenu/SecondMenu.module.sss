@import '@vars/antd-theme.sss'

.secondMenu
  margin-right: $padding-sm

  &:global(.ant-menu-horizontal)
    text-align: right

  @media (max-width: $screen-lg-max)
    &:global(.ant-menu-horizontal)
      > :global(.ant-menu-submenu)
        margin-left: $padding-sm
        margin-right: $padding-sm

        :global(.anticon)
          margin-right: 0

        .menuLabel
          display: none
