@import '@innodoc/client-web/src/style/antd-theme.sss'

.headerLogoWrapper
  align-items: center
  display: flex
  width: 100%
  height: 100%

  .headerLogoImg
    margin-right: $padding-sm
    height: calc($layout-header-height - 2 * $padding-xs)
    width: calc($layout-header-height - 2 * $padding-xs)
    background-position: 50% 50%
    background-repeat: no-repeat
    background-size: contain
