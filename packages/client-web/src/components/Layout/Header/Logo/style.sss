@import '@innodoc/client-web/src/style/antd-theme.sss'

.headerLogoWrapper
  align-items: center
  display: flex
  width: 100%
  height: 100%

  .headerLogoImg
    $size: calc($layout-header-height - 2 * $padding-xs)

    background-position: 50% 50%
    background-repeat: no-repeat
    background-size: contain
    height: $size
    margin-right: $padding-sm
    min-width: $size
